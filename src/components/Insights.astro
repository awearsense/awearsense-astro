---  
interface Props {
    title: string;
    description: string;
} 
const { title, description } = Astro.props;
---

<script>
	import { gsap } from "gsap";

	import { ScrollTrigger } from "gsap/ScrollTrigger"; 

	gsap.registerPlugin(ScrollTrigger); 

	const tl = gsap.timeline(); 
    const { parent, description } = Astro.props;
	tl.fromTo(
			'.child',
			{
				xPercent: -50,
			},
			{
				xPercent: 10,
				ease: "Power4.easeOut",
				scrollTrigger: {
					trigger: '.'+parent,
					start: "-50% top",
					end: "=+50%",
					scrub: true, // Smooth scrolling animation
					toggleActions: "play none none reverse",
					markers: false,
				},
			},
		);
	 
</script>


<section id={title} class="flex flex-col md:gap-24 items-center md:py-32">
    <div class="w-full flex items-center relative h-halfscreen"> 
        <div class="flex relative w-full">
            <h1 class="child text-12xl md:text-largest font-bold tracking-wide text-white">
                {title}
            </h1>
            <p class="text-5xl md:text-6xl linear-gradient absolute -bottom-14 md:-bottom-24" set:html={description}> 
            </p>
        </div>
    </div>
    <div class="w-full flex justify-center">
        <video autoplay loop muted class="h-halfscreen rounded-xl">
            <source src="/src/assets/focus.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
    </div> 
</section>


<style>

.linear-gradient{
    background:  linear-gradient(270deg, #ff38bb 4.25%, #ff8038 51.61%, #f5be66 80.43%, #f4dca8 93.03%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}
</style>