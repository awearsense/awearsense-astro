---
import Layout from '../layouts/Layout.astro';

const response = await fetch("https://jsonplaceholder.typicode.com/posts")
const data = await response.json()

---
<Layout title="Welcome to Astro.">
	<main class="container md:max-w-screen-xl mx-auto">
		<section id="main" class="h-screen flex justify-center items-center">
			<div class="flex flex-col text-center">
				<span class="text-6xl font-extralight tracking-tighter">awearsense</span>
				<span class="text-xl tracking-wide font-thin opacity-80">neural interface for your digital devices</span>
			</div> 
		</section>
		<section class="h-screen flex items-center">
			 <div class="grid grid-cols-2 w-full">
				<div class="bg-red-500">A</div>
				<div class="bg-green-300">B</div>
			 </div>
		</section> 
	</main>
</Layout>

<style>
#main{
	background-image: url('../assets/waves.svg');
	background-repeat: no-repeat no-repeat;
	background-position: center;
}
</style>
 
