---
import Layout from '../layouts/Layout.astro';

const response = await fetch("https://jsonplaceholder.typicode.com/posts")
const data = await response.json()

---

<Layout title="Welcome to Astro." class=" bg-green-500">
	<main class="container md:max-w-screen-xl mx-auto">
		<section id="main" class="h-screen flex justify-center items-center">
			<div class="flex flex-col text-center text-white">
				<span class="text-6xl">awearsense</span>
				<span class="text-xl tracking-wide font-extralight opacity-30">neural interface for your digital devices</span>
			</div> 
		</section>
		<section class="text-white">
			{data.slice(0,5).map((item:any)=>(<li>{item}</li>))}
		</section> 
	</main>
</Layout>

<style>
#main{
	background-image: url('../assets/waves.svg');
	background-repeat: no-repeat no-repeat;
	background-position: center;
}
</style>
 
