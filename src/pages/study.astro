---
import Layout from '../layouts/Layout.astro'; 
---

<Layout title="Study">
	<main class="container md:max-w-screen-xl mx-auto">
		<section id="main" class="h-screen flex justify-center items-center">
			<div class="flex flex-col text-center">
				<span class="text-8xl tracking-tighter text-slate-500">participate in study</span>
				<span class="text-xl tracking-wide font-extralight opacity-30">every contribution matters</span>
			</div> 
		</section> 
	</main>
</Layout>

<style>
#main{
	background-image: url('../assets/waves.svg');
	background-repeat: no-repeat no-repeat;
	background-position: center;
}
</style>
 
